doctype html
html
  head
    meta charset="utf-8"
    meta http-equiv="X-UA-Compatible" content="IE=edge"
    meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=0"
    title Forms - encumbrance restriction
    meta name="description" content=""
    link rel="stylesheet" media="all" href="../css/app.css"
  body.with-form

    .header.header--border
      .headerIn
        .contentIn
          a.header__logo.icon.icon--logo href="/"
          h1.header__title Новая договоренность
          a.header__close.icon.icon--close href="#"

    section.addProjectSection
      .contentIn

        .addProject
          .addProjectAbout
            .addProjectAbout__title Ограничения обременения участниками долей
            .addProjectAbout__info
              | Договоренности об ограничениях участников на отчуждение
              | долей проекта в пользу третьих лиц

        form.form.form--content
          .formIn
            .formContent

              .formBlock.formBlock--aside
                .formBlock__title Какие ограничениях участников будут действовать на обременение долей проекта в пользу третьих лиц?
                .formBlockIn
                  label.fieldWrapper.fieldWrapper--check
                    input.fieldWrapper__input.formblock-toggle-link type="radio" name="encumbrance_restriction" value="encumbrance_restriction1" checked="checked"
                    span.fieldWrapper__checkInfo Участники не имеют права накладывать обременение на принадлежащие им доли в проекте
                    span.fieldWrapper__radioIcon
                  label.fieldWrapper.fieldWrapper--check
                    input.fieldWrapper__input.formblock-toggle-link data-target="participants no right" type="radio" name="encumbrance_restriction" value="encumbrance_restriction2"
                    span.fieldWrapper__checkInfo Выбрать конкретных участников, которые не имеют права накладывать обременение на принадлежащие им доли
                    span.fieldWrapper__radioIcon
                  label.fieldWrapper.fieldWrapper--check
                    input.fieldWrapper__input.formblock-toggle-link type="radio" name="encumbrance_restriction" value="encumbrance_restriction3"
                    span.fieldWrapper__checkInfo Участники имеют права накладывать обременение на принадлежащие им доли в проекте только с письменного согласия остальных всех участников
                    span.fieldWrapper__radioIcon
                  label.fieldWrapper.fieldWrapper--check
                    input.fieldWrapper__input.formblock-toggle-link data-target="participants no right without permission" type="radio" name="encumbrance_restriction" value="encumbrance_restriction4"
                    span.fieldWrapper__checkInfo Выбрать конкретных участников, которые имеют права накладывать обременение на принадлежащие им доли в проекте третьим лицам только с письменного согласия других выбранных участников
                    span.fieldWrapper__radioIcon

              .formblock-toggle-hidden data-target="participants no right"
                .formBlock.formBlock--aside
                  .formBlock__title Укажите участников, которые не имеют права на обременение
                  .formBlockIn
                    label.fieldWrapper.fieldWrapper--check
                      input.fieldWrapper__input type="checkbox" name="participants_no_right_encumbrance" value="participants_no_right_encumbrance1"
                      span.fieldWrapper__checkInfo Павел Гужиков
                      span.fieldWrapper__checkboxIcon
                    label.fieldWrapper.fieldWrapper--check
                      input.fieldWrapper__input type="checkbox" name="participants_no_right_encumbrance" value="participants_no_right_encumbrance2"
                      span.fieldWrapper__checkInfo Иван Ардинцев
                      span.fieldWrapper__checkboxIcon
                    label.fieldWrapper.fieldWrapper--check
                      input.fieldWrapper__input type="checkbox" name="participants_no_right_encumbrance" value="participants_no_right_encumbrance3"
                      span.fieldWrapper__checkInfo Владимир Путин
                      span.fieldWrapper__checkboxIcon
                    label.fieldWrapper.fieldWrapper--check
                      input.fieldWrapper__input type="checkbox" name="participants_no_right_encumbrance" value="participants_no_right_encumbrance4"
                      span.fieldWrapper__checkInfo Дмитрий Медведев
                      span.fieldWrapper__checkboxIcon
                    label.fieldWrapper.fieldWrapper--check
                      input.fieldWrapper__input type="checkbox" name="participants_no_right_encumbrance" value="participants_no_right_encumbrance5"
                      span.fieldWrapper__checkInfo Сергей Шойгу
                      span.fieldWrapper__checkboxIcon
                .formBlock.formBlock--aside
                  .formBlock__title Укажите период действия ограничения
                  .formBlockIn
                    .formBlockWrapper.formBlockWrapper--select
                      .formBlock.formBlock--2.formBlock--quantity
                        span.formBlock__quantityButton.quantity-reduce
                        label.fieldWrapper
                          input.fieldWrapper__input.field-quantity type="number" name="" value="0"
                        span.formBlock__quantityButton.formBlock__quantityButton--add.quantity-add
                      .formBlock.formBlock--2
              					label.fieldWrapper
              						select.fieldWrapper__select.form-select placeholder="Выберите период"
              							option value="" Выберите период
              							option value="1" selected="selected" Месяцев
              							option value="2" Дней
              							option value="3" Недель
                .formBlock.formBlock--aside
                  .formBlock__title.formBlock__title--indentTop
                    | Иные договоренности
                    br
                    span
                      | (если есть)
                  .formBlockIn
                    label.fieldWrapper
                      textarea.fieldWrapper__input name="participants_no_right_arrangements" placeholder="Введите иные договоренности"

              .formblock-toggle-hidden data-target="participants no right without permission"
                .formBlock.formBlock--aside.field-related-container data-related="participant"
                  .formBlock__title Укажите участников, которым требуется разрешение
                  .formBlockIn
                    label.fieldWrapper.fieldWrapper--check
                      input.fieldWrapper__input.field-related type="checkbox" name="participants_no_right_without_permission_encumbrance" value="participants_no_right_without_permission_encumbrance1"
                      span.fieldWrapper__checkInfo Павел Гужиков
                      span.fieldWrapper__checkboxIcon
                    label.fieldWrapper.fieldWrapper--check
                      input.fieldWrapper__input.field-related type="checkbox" name="participants_no_right_without_permission_encumbrance" value="participants_no_right_without_permission_encumbrance2"
                      span.fieldWrapper__checkInfo Иван Ардинцев
                      span.fieldWrapper__checkboxIcon
                    label.fieldWrapper.fieldWrapper--check
                      input.fieldWrapper__input.field-related type="checkbox" name="participants_no_right_without_permission_encumbrance" value="participants_no_right_without_permission_encumbrance3"
                      span.fieldWrapper__checkInfo Владимир Путин
                      span.fieldWrapper__checkboxIcon
                    label.fieldWrapper.fieldWrapper--check
                      input.fieldWrapper__input.field-related type="checkbox" name="participants_no_right_without_permission_encumbrance" value="participants_no_right_without_permission_encumbrance4"
                      span.fieldWrapper__checkInfo Дмитрий Медведев
                      span.fieldWrapper__checkboxIcon
                    label.fieldWrapper.fieldWrapper--check
                      input.fieldWrapper__input.field-related type="checkbox" name="participants_no_right_without_permission_encumbrance" value="participants_no_right_without_permission_encumbrance5"
                      span.fieldWrapper__checkInfo Сергей Шойгу
                      span.fieldWrapper__checkboxIcon
                .formBlock.formBlock--aside.field-related-container data-related="participant"
                  .formBlock__title Укажите участников, чье разрешение требуется
                  .formBlockIn
                    label.fieldWrapper.fieldWrapper--check
                      input.fieldWrapper__input.field-related type="checkbox" name="participants_no_right_without_permission_encumbrance" value="participants_no_right_without_permission_encumbrance1"
                      span.fieldWrapper__checkInfo Павел Гужиков
                      span.fieldWrapper__checkboxIcon
                    label.fieldWrapper.fieldWrapper--check
                      input.fieldWrapper__input.field-related type="checkbox" name="participants_no_right_without_permission_encumbrance" value="participants_no_right_without_permission_encumbrance2"
                      span.fieldWrapper__checkInfo Иван Ардинцев
                      span.fieldWrapper__checkboxIcon
                    label.fieldWrapper.fieldWrapper--check
                      input.fieldWrapper__input.field-related type="checkbox" name="participants_no_right_without_permission_encumbrance" value="participants_no_right_without_permission_encumbrance3"
                      span.fieldWrapper__checkInfo Владимир Путин
                      span.fieldWrapper__checkboxIcon
                    label.fieldWrapper.fieldWrapper--check
                      input.fieldWrapper__input.field-related type="checkbox" name="participants_no_right_without_permission_encumbrance" value="participants_no_right_without_permission_encumbrance4"
                      span.fieldWrapper__checkInfo Дмитрий Медведев
                      span.fieldWrapper__checkboxIcon
                    label.fieldWrapper.fieldWrapper--check
                      input.fieldWrapper__input.field-related type="checkbox" name="participants_no_right_without_permission_encumbrance" value="participants_no_right_without_permission_encumbrance5"
                      span.fieldWrapper__checkInfo Сергей Шойгу
                      span.fieldWrapper__checkboxIcon
                .formBlock.formBlock--aside
                  .formBlock__title Укажите период действия ограничения
                  .formBlockIn
                    .formBlockWrapper.formBlockWrapper--select
                      .formBlock.formBlock--2.formBlock--quantity
                        span.formBlock__quantityButton.quantity-reduce
                        label.fieldWrapper
                          input.fieldWrapper__input.field-quantity type="number" name="" value="0"
                        span.formBlock__quantityButton.formBlock__quantityButton--add.quantity-add
                      .formBlock.formBlock--2
              					label.fieldWrapper
              						select.fieldWrapper__select.form-select placeholder="Выберите период"
              							option value="" Выберите период
              							option value="1" selected="selected" Месяцев
              							option value="2" Дней
              							option value="3" Недель
                .formBlock.formBlock--aside
                  .formBlock__title.formBlock__title--indentTop
                    | Иные договоренности
                    br
                    span
                      | (если есть)
                  .formBlockIn
                    label.fieldWrapper
                      textarea.fieldWrapper__input name="participants_no_right_without_permission_arrangements" placeholder="Введите иные договоренности"

          .buttonContainer.buttonContainer--center
            button.buttonContainer__button.linkButton.linkButton--small type="button" отменить
            button.buttonContainer__button.linkButton.linkButton--small.linkButton--blue type="submit" сохранить



